{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src", "eslint.config.js"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist"],
	"extends": "@ineedj/tsconfig/base.json"
}
